# Server Configuration
MAIN_APP_PORT=8080
NODE_ENV="production"

# Database Configuration
# For Docker: use service name as host
# For VPS: use postgres as host (Docker service name) or localhost if external
DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/sky_s_db"

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-make-it-very-long-and-random"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Redis Configuration (optional)
# REDIS_URL="redis://:redis123@redis:6379"

# Email Configuration (Production SMTP)
# Use your actual SMTP provider (Gmail, SendGrid, AWS SES, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@sky-s.com"

# CORS Configuration
# Add your frontend domain(s)
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="./uploads"

# Base URL for the API
BASE_URL="https://api.yourdomain.com"

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
